<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="students" engine="innodb" resource="default">
        <column xsi:type="smallint" name="id" unsigned="false" nullable="false" identity="true" comment="Student ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="14" comment="Student Name"/>
        <column xsi:type="varchar" name="last_name" nullable="false" length="14" comment="Student Last Name"/>
        <column xsi:type="float" name="average_grade"  nullable="true" default="0" comment="Student Average Grade"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="STUDENT_NAME_LASTNAME" indexType="fulltext">
            <column name="name"/>
            <column name="last_name"/>
        </index>
    </table>
</schema>
